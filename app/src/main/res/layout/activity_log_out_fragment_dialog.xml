<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.ipati.dev.castleevent.fragment.loading.LogOutFragmentDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_header_dialog_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular"
            android:gravity="center_horizontal"
            android:textColor="@color/colorFontDialogLogOut"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_msg_dialog_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular"
            android:textColor="@color/colorFontDialogLogOut"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_dialog_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_back_ground_dialog_log_out"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/circular"
                android:text="@string/cancel_dialog_logout"
                android:textColor="@color/colorCancelButton"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_accept_dialog_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_back_ground_dialog_log_out"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/circular"
                android:text="@string/accept_diaog_logout"
                android:textColor="@color/colorAcceptButton"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
