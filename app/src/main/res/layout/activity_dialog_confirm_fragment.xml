<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ipati.dev.castleevent.fragment.loading.DialogConfirmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular"
            android:gravity="center_horizontal"
            android:text="กรุณายืนยันการจอง"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_msg_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular"
            android:gravity="center"
            android:lines="2"
            android:text="คุณต้องการจอง บัตร จำนวน 2 ใบ  ใช่ / ไม่"
            android:textColor="#000"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_dialog_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_back_groud_denied"
                android:fontFamily="@font/circular"
                android:text="ยกเลิก"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_confirm_dialog_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/custom_back_ground_accept"
                android:fontFamily="@font/circular"
                android:text="ยืนยัน"
                android:textColor="#FFF"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
