<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="6dp"
    tools:context="com.ipati.dev.castleevent.fragment.loading.MissingDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundDialog"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_logo_missing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@mipmap/ic_error_outline" />

        <TextView
            android:id="@+id/tv_msg_missing_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:nestedScrollingEnabled="true"
            android:padding="2dp"
            android:textColor="@color/colorFontMsgMissingDialog"
            android:textSize="@dimen/sizeFontHeader" />

        <TextView
            android:id="@+id/tv_accept_cancel_missing_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple_back_ground_missing_dialog"
            android:gravity="center"
            android:text="@string/accept_missing"
            android:textColor="@color/colorFontMissingDialog"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>
