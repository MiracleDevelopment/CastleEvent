<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ipati.dev.castleevent.fragment.loading.MissingDialogFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_logo_missing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@mipmap/ic_error_outline" />

        <TextView
            android:id="@+id/tv_msg_missing_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorFontMsgMissingDialog"
            android:textSize="25sp" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="14dp">

            <TextView
                android:id="@+id/tv_accept_cancel_missing_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ripple_back_ground_missing_dialog"
                android:fontFamily="@font/circular"
                android:gravity="center"
                android:text="@string/accept_missing"
                android:textColor="@color/colorFontMissingDialog"
                android:textSize="28sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
