<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ipati.dev.castleevent.fragment.loading.LoadingDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_loading_header_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="ระบบกำลังดำเนินการ"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_loading_progress_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular"
            android:gravity="center_horizontal"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view_animation_loading_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
